<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title></title>
        <style></style>
    </head>
    <body>
        <table border="0" cellpadding="0" cellspacing="0" id="bodyTable" height="100%" width="100%">
            <tr>
                <td align="center" valign="top">
                    <table border="0" cellpadding="0" cellspacing="0" id="emailContainer" width="100%">
                        <tr>
                            <td align="left" valign="top">
                                <table border="0" cellpadding="0" cellspacing="0" id="emailHeader" width="100%">
                                    <tr>
                                        <td id="newIssueTitle" align="left" valign="top" style="font-size: 18px; font-weight: bold;">{{title}}</td>
                                    </tr>
                                    <tr><td>&nbsp;</td></tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td align="left" valign="top">
                                
                                <table border="0" cellpadding="0" cellspacing="0" id="issuesSummary" width="100%">
                                    <tr>
                                        <td id="summary">{{issue_summary integration issueAuthor hostname trigger}}</td>
                                    </tr>
                                    <tr><td>&nbsp;</td></tr>
                                    <tr>
                                        <td id="links">{{links integration hostname trigger}}</td>
                                    </tr>
                                    <tr><td>&nbsp;</td></tr>
                                    <tr>
                                        <td id="resolution">{{resolution_summary integration issueAuthor}}</td>
                                    </tr>
                                    <tr><td>&nbsp;</td></tr>
                                    <tr><td>&nbsp;</td></tr>
                                    <tr><td>&nbsp;</td></tr>
                                </table>
                                
                                {{#if trigger.emailConfiguration.includeBotConfiguration}}
                                {{> bot_configuration}}
                                {{/if}}

                                {{#if trigger.emailConfiguration.includeIssueDetails}}
                                {{#if issueAuthor.freshIssues.issuesCount}}
                                {{> new_issue_issue_details}}
                                {{else}}
                                {{> no_new_issue_issue_details}}
                                {{/if}}
                                {{#if issueAuthor.resolvedIssues.issuesCount}}
                                {{> resolved_issue_issue_details}}
                                {{/if}}
                                {{/if}}
                                
                                {{#if trigger.emailConfiguration.includeCommitMessages}}
                                {{#if issueAuthor.freshIssues.commitsCount}}
                                {{> new_issue_commit_messages}}
                                {{else}}
                                {{> no_new_issue_commit_messages}}
                                {{/if}}
                                {{/if}}

                                {{#unless trigger}}
                                {{> bot_configuration}}
                                
                                {{#if issueAuthor.freshIssue.issuesCount}}
                                {{> new_issue_issue_details}}
                                {{else}}
                                {{> no_new_issue_issue_details}}
                                {{/if}}  
                                {{#if issueAuthor.resolvedIssues.issuesCount}}
                                {{> resolved_issue_issue_details}}
                                {{/if}}                              
                                
                                {{#if issueAuthor.freshIssues.commitsCount}}
                                {{> new_issue_commit_messages}}
                                {{else}}
                                {{> no_new_issue_commit_messages}}
                                {{/if}}
                                {{/unless}}
                                
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

        </table>
    </body>
</html>